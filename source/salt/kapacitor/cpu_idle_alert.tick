dbrp "telegraf"."autogen" 
    stream // Select just the cpu measurement from our example database. 
        |from() 
            .measurement('cpu') 
            .where(lambda: "cpu" == 'cpu-total') 
        |alert()
	    .id('{{ index .Tags "host"}}/usage_idle')
            .crit(lambda: int("usage_idle") > 90) // Whenever we get an alert write it to a file. 
        .slack()
